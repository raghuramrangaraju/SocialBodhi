<script type="text/javascript">
    // Dynamically to add the rows
    var rows = 2;
    var participantsRows = 2;

    function addrows() {
        rows++;
        var data = "<tr>" + "<td><div class=\"form-group col-lg-5 \" style=\"display:-webkit-inline-box\"> <span>" + rows + "&nbsp;" + "</span><input class=\"form-control \" name=\"choices\" placeholder=\"Enter choices\" type=\"text\"></div></td></tr>";
        $("#tablebody").append(data);
    }
    var i = 0;
    function setmytree() {
        $("#modalhead").empty();
        $("#modalbody").empty();
        var tbody = "";

        tbody += "<tr><td><div class=\"col-lg-4 \" style=\"display:-webkit-inline-box\">" + 1 + "&nbsp;" + "<input class=\"form-control  \" placeholder=\"Enter EmailId\" type=\"text\" name=\"" + i + "\"  ></div></td></tr>";

        $('#modalbody').html(tbody);
        $('#myModal').modal('show');
        participantsRows = 2;
    }

    
    function addparticipants() {
        i++;
        var data = "<tr><td><div class=\"col-lg-4\" style=\"display:-webkit-inline-box\">" + participantsRows + "&nbsp;" + "<input class=\"form-control\"  placeholder=\"Enter EmailId\" type=\"text\" name=\"" + i + "\"  ></td></div></tr>";
        $('#modalbody').append(data);
        participantsRows++;
    }

    function setupmytree() {
        $("#modalhead").empty();
        $("#modalbody").empty();
        var thead = "";
        var tbody = "";
        var i = 1;
        var columnsize = 1;
        $("#maintable tbody tr").each(function () {
            var value = $(this).closest("tr").find("input[name=choices]").val();
            var contain = "";
            if (value != "" && value != undefined) {
                if (columnsize == 1) {
                    thead += "<tr><th>" + "Participants" + "</th>"
                }
                thead += "<th>" + value + "</th>"
                columnsize++;
            }
        });
        thead += "</tr>";

        $("#maintable tbody tr").each(function () {
            var value = $(this).closest("tr").find("input[name=participants]").val();
            var contain = "";
            if (value != "" && value != undefined) {
                tbody += "<tr><td>" + value + "</td>"
                for (i = 0; i < columnsize - 1; i++) {
                    var classname = "ratingbar " + i;
                    tbody += "<td>" + "<input type=\"range\" min=\"0\" max=\"100\" value=\"0\" step=\"5\" name=\"" + i + "\"></td>"
                }
            }
            tbody += "</td>";
        });
        $('#modalhead').html(thead);
        $('#modalbody').html(tbody);
        $('#myModal').modal('show');
    }

    function checkresult() {
        var count = [];
        var j = 0;
        var Colcount = document.getElementById('modaltable').rows[0].cells.length;
        Colcount--;
        $("#modaltable tbody#modalbody tr").each(function () {
            j++;
            for (i = 0; i < Colcount; i++) {
                var value = parseInt($(this).closest("tr").find('input[name="' + i + '"]').val());
                var contain = "";
                if (value != "" && value != undefined) {
                    if (j == 1) {
                        count[i] = value;
                    } else {
                        count[i] = count[i] + value;
                    }
                }
            }
        });
        debugger;
        var largest = Math.max.apply(Math, count);
        var index = count.indexOf(largest);
        index++;
        var myTable = document.getElementById('modaltable');
        var rows = myTable.rows;
        var firstRow = rows[0];
        var result = firstRow.cells[index].innerHTML;
        $("#result").empty();
        if (result == "Participants") {
            $("#result").append("<br><ul><li><label>" + "Please enter your rating" + "</label></li></ul>");
        }
        else {
            $("#result").append("<br><ul><li><label>" + result + "</label></li></ul>");
        }
    }


    function Sendemail() {
        debugger;
        $('#sendmailbutton').prop('disabled', true);
        var columnsize = 1;
        var choices = "";
        $("#maintable tbody tr").each(function () {
            var value = $(this).closest("tr").find("input[name=choices]").val();
            var contain = "";
            if (value != "" && value != undefined) {
                choices += value + " ";
            }
        });

        var email = "";
        var j = 0;
        $("#modaltable tbody#modalbody tr").each(function () {
            var value = $(this).closest("tr").find("input[name= " + j + " ]").val();
            var contain = "";
            var choices = "";
            if (value != "" && value != undefined) {
                email += value + " ";
            }
            j++;
        });

        if (email != "") {

            $.ajax({
                url: '../Home/sendemail',
                data: { 'choices': choices, 'emailids': email },
                type: "POST",
                success: function (result) {

                    $('#myModal').modal('toggle');
                    $('#sendmailbutton').prop('disabled', false);
                },
                error: function (response) {

                }

            });
        }
        else {

            alert("Enter a valid email");

        }
       

    }
</script>